<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.cares.s1.notice">
		<select id="list" parameterType="NoticePager" resultType="NoticeDTO">
			SELECT * 
			FROM (SELECT ROWNUM R, N.* 
			      FROM (SELECT * FROM NOTICE 
			            WHERE NUM > 0 
			            AND 
			            <choose>
				            <when test="kind=='col1'">
				            	TITLE
				            </when> 
			            	<when test="kind=='col2'">
				            	CONTENTS
				            </when>
				            <otherwise>
				            	WRITER
				            </otherwise>
			            </choose>
			            LIKE '%' || #{search} || '%'
			            ORDER BY NUM DESC) N)
			WHERE R BETWEEN #{startRow} AND #{lastRow}
		</select>
		<select id="getTotal" resultType="Long" parameterType="NoticePager">
			SELECT COUNT(NUM) FROM NOTICE
			WHERE
			<choose>
	            <when test="kind=='col1'">
	            	TITLE
	            </when> 
            	<when test="kind=='col2'">
	            	CONTENTS
	            </when>
	            <otherwise>
	            	WRITER
	            </otherwise>
            </choose>
            LIKE '%' || #{search} || '%'
		</select>
		
		<select id="detail" resultType="NoticeDTO" parameterType="NoticeDTO">
			SELECT * FROM NOTICE WHERE NUM = #{num}
		</select>
		<delete id="delete" parameterType="NoticeDTO">
			DELETE NOTICE WHERE NUM = #{num}
		</delete>
		<insert id="add" parameterType="NoticeDTO">
			INSERT INTO NOTICE VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, 0)
		</insert>
		<update id="update" parameterType="NoticeDTO">
			UPDATE NOTICE SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
		</update>
		
	</mapper>